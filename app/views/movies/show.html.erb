<div class="container">
  <%= render @movie, class: 'card mb-3' %>

  <div class="mt-3">
    <%= link_to "Edit this movie", edit_movie_path(@movie), class: 'btn btn-warning mr-2' %>
    <%= link_to "Delete movie", @movie, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    <%= link_to "Back to movies", movies_path, class: 'btn btn-secondary' %>
  </div>




  <%= render 'reviews/form', movie: @movie %>


  <% if @movie.reviews.any? %>
    <h3>Reviews</h3>
    <%= render @movie.reviews %>
  <% else %>
    <p>No reviews yet. Be the first to leave a review!</p>
  <% end %>
</div>
