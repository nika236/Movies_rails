<div class="container">
  <%= form_with(model: movie, local: true, html: { class: 'mt-5' }) do |form| %>

    <div class="col-sm-3">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="col-sm-3">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="col-sm-3">
      <%= form.label :release_date %>
      <%= form.date_field :release_date, class: 'form-control' %>
    </div>

    <div class="col-sm-3">
      <%= form.submit "Save", class: 'btn btn-primary mt-2' %>
    </div>
  <% end %>
</div>
