<div class="container">
  <h1 class="mt-5 mb-4">Movies</h1>

  <div id="movies">
    <% @movies.each do |movie| %>
          <%= render movie %>
          <p class="card-text">
            <%= link_to "Show this movie", movie, class: 'btn btn-info mr-2' %>
            <%= link_to "Edit", edit_movie_path(movie), class: 'btn btn-warning mr-2' %>
            <%= link_to "Delete", movie, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </p>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "New movie", new_movie_path, class: 'btn btn-primary' %>
  </div>
</div>